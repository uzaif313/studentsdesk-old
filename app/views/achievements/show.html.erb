<div class="row"  ng-controller="achievementController">
  <div class="col-md-9">
        <div flash-message="5000"></div>
        <ul class="list-group">
            <li class="list-group-item" ng-repeat="achievement in achievements">
                <h4 class="list-group-item-heading">
                  {{achievement.title}}
                </h4>
                <p class="list-group-item-text">
                  {{achievement.description}}
                </p>
                <p>
                    {{achievement.achievment_date|date}}
                </p>
                <button type="button" class="btn btn-info" ng-click="updateAchievement(achievement)">Update</button>
                <button type="button" class="btn btn-danger" ng-click="deleteAchievement(achievement)">Delete</button>
            </li>
        </ul>
  </div>

  <div class="col-md-3">
    <div class="alert alert-danger" ng-show="errors!=null" >
      <p ng-repeat="val in errors">
        {{$index+1}}. {{val}}
      </p>
    </div>
    <form class="form" ng-submit="addAchievement(newAchievement)" role="form">
      <div class="form-group">
          <label for="title">Title</label>
          <input type="text" name="title"   ng-model="newAchievement.title" class="form-control" >
      </div>

      <div class="form-group">
          <label for="Description">Description</label>
          <input type="text" name="description"  ng-model="newAchievement.description" class="form-control" >
      </div>


      <div class="form-group">
          <label for="date">Date</label>
          <input type="date" name="date" ng-model="newAchievement.achievment_date" class="form-control">
      </div>

      <div class="form-group">
        <input type="submit" class="form-control btn btn-success" value="Save">
      </div>
    </form>
    </div>

</div>
