<div class="page-header">
  <h1 class="text-center">Sign Up</h1>
</div>
<div class="col-md-6 col-md-offset-3">
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name),class:"form") do |f| %>
    <%= devise_error_messages! %>

    <div class="form-group">
      <%= f.label :email %><br />
      <%= f.email_field :email,class:"form-control", autofocus: true %>
    </div>

    <div class="form-group">
      <%= f.label :username %><br />
      <%= f.text_field :username,class:"form-control" %>
    </div>

    <div  class="form-group">
      <%= f.label :password %>
      <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password,class:"form-control", autocomplete: "off" %>
    </div>

    <div  class="form-group">
      <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation,class:"form-control", autocomplete: "off" %>
    </div>

    <div class="form-feild">
      <%= f.fields_for  :stud do |student_form| %>
        <div class="form-group">
          <%= student_form.label :class_name %>
          <%= student_form.text_field  :class_name ,class:"form-control" %>
        </div>
    </div>

      <div class="form-feild">
        <div class="form-group">
          <%= student_form.label :hobby %>
          <%= student_form.text_field  :hobby ,class:"form-control" %>
        </div>

        <div class="form-feild">
          <div class="form-group">
            <%= student_form.label :firstname %>
            <%= student_form.text_field  :firstname ,class:"form-control" %>
          </div>
        </div>
          <div class="form-feild">
            <div class="form-group">
              <%= student_form.label :lastname %>
              <%= student_form.text_field  :lastname ,class:"form-control" %>
            </div>
          </div>
        <% end %>
  <%= f.hidden_field :usertype,:value=> "student" %>
</div>
    <div class="form-group" align="Center">
      <%= f.submit "Sign up",class:"btn form-control  btn-success" %>
    </div>
  <% end %>

</div>
