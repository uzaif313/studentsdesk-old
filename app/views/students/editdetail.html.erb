<div class="page-header">
  <h2 class="text-center">Update Detail</h2>
</div>
<div class="col-md-6 col-md-offset-3">
  <%= form_for  :stud do |f| %>
  <div class="form-group">
    <%= f.label :firstname %>
    <%= f.text_field  :firstname ,class:"form-control" %>
  </div>
    <div class="form-group">
      <%= f.label :lastname %>
      <%= f.text_field  :lastname ,class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :class_name %>
      <%= f.text_field  :class_name ,class:"form-control" %>
    </div>

    <div class="form-group">
      <%= f.label :hobby %>
      <%= f.text_field  :hobby ,class:"form-control" %>
    </div>


    <div class="form-group">
        <%= f.submit "Update Detail" ,class:"col-md-12 btn btn-warning" ,style:"margin-bottom:2%" %>
    </div>
    <% end %>
</div>
